<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tricheer.test.phone.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_phontNumber"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="60dp"
            android:paddingTop="20dp"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/call_number_text_bg"
            android:hint="please input number"
            android:padding="20dp" />
        <Button
            android:id="@+id/bt_phoneTxt"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="电话簿" />
        <Button
            android:id="@+id/bt_up"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="上一条" />
        <Button
            android:id="@+id/bt_down"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="下一条" />
        <Button
            android:id="@+id/bt_enter"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="呼叫记录:"
            android:textColor="#7D26CD"
            android:padding="20dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="呼叫状态:"
            android:textColor="#7D26CD"
            android:padding="20dp" />

        <TextView
            android:id="@+id/tv_states"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#EE00EE"
            android:padding="20dp" />

        <Button
            android:id="@+id/bt_OutCall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="去电查询"
            android:padding="20dp" />
        <TextView
            android:id="@+id/tv_sizeOut"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="20dp" />

        <Button
            android:id="@+id/bt_InCall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="来电查询"
            android:padding="20dp" />

        <TextView
            android:id="@+id/tv_sizeIn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="20dp" />
        <Button
            android:id="@+id/bt_uncall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="未接电话"
            android:padding="20dp" />

        <TextView
            android:id="@+id/tv_uncall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="20dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_call_record"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
    </ListView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

   <include
       layout="@layout/japan_layout"/>

</LinearLayout>
