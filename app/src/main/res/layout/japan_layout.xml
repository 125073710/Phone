<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ly_jianpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_1"
                android:background="@drawable/bt1"
                style="@style/buttonStyle" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_2"
                android:background="@drawable/bt2" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_3"
                android:background="@drawable/bt3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_4"
                android:background="@drawable/bt4" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_5"
                android:background="@drawable/bt5" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_6"
                android:background="@drawable/bt6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_7"
                android:background="@drawable/bt7" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_8"
                android:background="@drawable/bt8" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_9"
                android:background="@drawable/bt9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_xinhao"
                android:background="@drawable/bt_xinhao" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_0"
                android:background="@drawable/bt0" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/bt_jinhao"
                android:background="@drawable/bt_jin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/bt_call"
                android:background="@drawable/bt_call" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/bt_delete"
                android:background="@drawable/bt_delete" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="挂断"
                android:id="@+id/bt_endcall"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="快速拨号"
                android:id="@+id/bt_fastcall"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>