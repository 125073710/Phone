<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/touming70"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_left_sim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="左"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_up_sim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_dowm_sim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_right_sim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="右"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_ok_sim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ok"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/jp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <telephony.internal.android.com.phoneui.view.JpSpellsSortView
            android:id="@+id/js_sort"
            android:layout_width="912dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:paddingRight="10dp" />
        <TextView
            android:id="@+id/tv_jpsim_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#100"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/en_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <telephony.internal.android.com.phoneui.view.SpellsSortView
            android:id="@+id/en_sort"
            android:layout_width="912dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:paddingRight="10dp" />
        <TextView
            android:id="@+id/tv_en_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#100"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_people_sim"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>